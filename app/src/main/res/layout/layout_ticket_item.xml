<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:layout_editor_absoluteY="81dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ticketMovieImage"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_margin="4dp"
        android:layout_weight="2"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ticketPaymentID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Payment ID"
            tools:layout_editor_absoluteX="392dp"
            tools:layout_editor_absoluteY="124dp" />

        <TextView
            android:id="@+id/ticketMovieName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="MovieName"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="392dp"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/ticketSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Seats"
            tools:layout_editor_absoluteX="392dp"
            tools:layout_editor_absoluteY="41dp" />

        <TextView
            android:id="@+id/ticketMoneyPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Money Paid"
            tools:layout_editor_absoluteX="392dp"
            tools:layout_editor_absoluteY="67dp" />

    </LinearLayout>

</LinearLayout>
